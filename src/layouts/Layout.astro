---
import Header from "../components/Header.astro";
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta
			property="og:title"
			content="Ezra Magaram | Full-Stack Engineer"
		/>
		<meta
			property="og:description"
			content="Full-stack engineer specializing in complex React applications, elegant UI design, and performance optimization. Building fast, beautiful web experiences."
		/>
		<meta property="og:image" content="/og-image-cropped.png" />
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="1536" />
		<meta property="og:image:height" content="865" />

		<meta name="generator" content={Astro.generator} />
		<title>Ezra Magaram</title>
	</head>
	<body class="bg-paper-dim text-ink">
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
