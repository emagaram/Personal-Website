---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Projects from "../components/home/Projects/Projects.astro";
import Skills from "../components/home/Skills/Skills.astro";
import BlueprintGrid from "../components/BlueprintGrid.astro";
import Contact from "../components/home/Contact/Contact.astro";
// Supports weights 100-900
---

<Layout>
  <BlueprintGrid />
  <div class="container mx-auto px-4 flex flex-col gap-y-18 py-18">
    <Hero />
    {
      [Projects, Skills, Contact].map((Component, idx) => (
        <Component sectionNumber={idx + 1} />
      ))
    }
  </div>
</Layout>
